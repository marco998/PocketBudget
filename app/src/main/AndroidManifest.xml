<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projet.eseo.pocketbudget" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewIncomeActivity"
            android:label="@string/title_activity_new_income"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".NewExpenditureActivity"
            android:label="@string/title_activity_new_expenditure"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".ListIncomeActivity"
            android:label="@string/title_activity_list_revenus"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.projet.eseo.pocketbudget.MainActivity" />
        </activity>
        <activity
            android:name=".ListExpenditureActivity"
            android:label="@string/title_activity_list_expenditure" >
        </activity>
        <activity
            android:name=".ExpenditureActivity"
            android:label="@string/title_activity_expenditure"
            android:parentActivityName=".ListExpenditureActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.projet.eseo.pocketbudget.ListExpenditureActivity" />
        </activity>
    </application>

</manifest>
